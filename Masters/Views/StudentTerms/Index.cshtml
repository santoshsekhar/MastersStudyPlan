@model IEnumerable<Masters.Models.StudentTerm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by student ID: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StudentIDSortParm"]">@Html.DisplayNameFor(model => model.StudentId)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TermIDSortParm"]">@Html.DisplayNameFor(model => model.TermId)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TermLabelSortParm"]">@Html.DisplayNameFor(model => model.TermLabel)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TermAbbrevSortParm"]">@Html.DisplayNameFor(model => model.TermAbbrev)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.done)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TermId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermAbbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermLabel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermAbbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.done)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentTermId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentTermId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentTermId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
